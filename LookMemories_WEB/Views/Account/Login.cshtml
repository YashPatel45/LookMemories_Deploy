@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="card-body">
    <h5 class="card-title text-center">Log In</h5>
    <form asp-action="" asp-controller="" method="post" class="form-signin" autocomplete="off">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-label-group">
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required asp-for="@Model.Email" autofocus>
            <label for="inputEmail">Email address</label>
        </div>

        <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" asp-for="@Model.Password" required>
            <label for="inputPassword">Password</label>
        </div>

        <div class="custom-control custom-checkbox mb-3">
            <input type="checkbox" class="custom-control-input" id="customCheck1">
            <label class="custom-control-label" for="customCheck1" asp-for="@Model.IsRemember">Remember password</label>
        </div>
        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
        <hr class="my-4">
        <a asp-action="Verification" asp-controller="Account">Forget Password?</a>
        <a asp-action="Registration" asp-controller="Account">Sign Up</a>
    </form>
</div>


