@model List<Photos>
@inject IConfiguration configuration
@{
    ViewData["Title"] = "SearchMemories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count > 0)
{
    <div class="row mt-3">

        <div class="col-md-12">

            <div class="card">
                <div class="card-header">
                    Searched Result
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            string photopath = String.Empty;
                            string downloadPath = String.Empty;

                            string basepath =  configuration["PhotoPath"].ToString() + "/";
                            photopath = "~/" + basepath + item.PhotoPath;
                            downloadPath = "../" + basepath + item.PhotoPath;



                        <div class="col-md-1">
                            <span style="cursor: pointer;" class="fa fa-download Downloadpic text-info" data-photoname="@item.ImgName" data-pic="@downloadPath"></span>

                            <a href="#">

                                <img src="@photopath" class="img-thumbnail userimage" asp-append-version="true" />
                                <div class="text-center">@item.ImgName</div>
                            </a>
                        </div>


                        }
                    </div>

                    <div>

                    </div>
                </div>
            </div>

        </div>

    </div>
}
else
{

    <p>NO result found</p>
}

