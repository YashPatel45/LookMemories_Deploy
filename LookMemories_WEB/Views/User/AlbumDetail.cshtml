                                                @*<input class="col-md-2 btn btn-success order-md-12 SaveComment" data-img_Id="#img_@item.Id" data-timgId="#timg_@item.Id" data-PhotoId="@item.Id" data-Eimg_ID="#commentvalue_@item.Id" type="button" value="save" />*@

                                            </div>
                                        </td>




